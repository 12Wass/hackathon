{% if pageCount > 1 %}
    <div class="col-12">
        <ul class="pagination justify-content-center mb-0">
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
                       aria-label="Previous">Pr√©cedent</a>
                </li>
            {% endif %}
            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active">
                        <a class="page-link" href="javascript:void(0)">{{ page }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}"
                       aria-label="Next">Suivant</a>
                </li>
            {% endif %}

        </ul>
    </div>
{% endif %}
