{% extends 'views/public/layout.html.twig' %}
{% block title %}Trouver mon dispositif{% endblock %}
{% block body %}
    <style>
        #chatbot .dominiqueimg {
            max-width: 150px;
        }

        #chatbot .dominiqueimgmin {
            width: 40px;
            display: inline-block;
            margin-right: 15px;
        }

        section #chatbot {
            background-color: #000691;
            padding-top: 9%;
            padding-bottom: 10%;
        }

        #box {
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            height: auto;
            max-height: 53vh;
            overflow-y: scroll;
        }

        .answer {
            line-height: 20px;
            padding: 10px;
        }

        .response {
            text-align: right;
            line-height: 20px;
            padding: 15px 0px 15px 15px;
        }

        .chat-text {
            border-radius: 25px;
            padding: 15px;
            display: inline-flex;
        }

        .answer .chat-text {
            background: #E5E5E5;
        }

        .response .chat-text {
            background: #000691;
            color: white;
        }

        .chat-text > p {
            display: flex;
            justify-content: center;
            align-content: center;
            flex-direction: column;
        }

        #chatbot #baseline {
            margin-top: 40px;
            font-size: 16px;
            font-stretch: normal;
            font-style: normal;
            line-height: 1.3;
            letter-spacing: normal;
            text-align: center;
            color: #fff;
        }

        .button-finish {
            background-color: #000091;
            color: #fff;
            padding: 10px 30px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 25px;
            border: unset;
        }

        .button-response {
            background-color: #fff;
            border: 2px solid #000091;
            color: #000091;
            padding: 10px 30px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 25px;
            min-width: 100%;
        }

        .button-response:hover {
            background-color: #000091;
            color: #fff;
        }


        .spinme-right {
            display: inline-block;
            padding: 15px 20px;
            font-size: 14px;
            border-radius: 30px;
            line-height: 1.25em;
            font-weight: 100;
            opacity: 0.2;
        }

        .spinme-left {
            display: inline-block;
            padding: 15px 20px;
            font-size: 14px;
            color: #ccc;
            border-radius: 30px;
            line-height: 1.25em;
            font-weight: 100;
            opacity: 0.2;
        }

        .spinner {
            margin: 0;
            width: 50px;
            text-align: center;
        }

        .spinner > div {
            width: 10px;
            height: 10px;
            border-radius: 100%;
            display: inline-block;
            -webkit-animation: sk-bouncedelay 1.4s infinite ease-in-out both;
            animation: sk-bouncedelay 1.4s infinite ease-in-out both;
            background: rgba(0, 0, 0, 1);
        }

        .spinner .bounce1 {
            -webkit-animation-delay: -0.32s;
            animation-delay: -0.32s;
        }

        .spinner .bounce2 {
            -webkit-animation-delay: -0.16s;
            animation-delay: -0.16s;
        }

        @-webkit-keyframes sk-bouncedelay {
            0%,
            80%,
            100% {
                -webkit-transform: scale(0)
            }
            40% {
                -webkit-transform: scale(1.0)
            }
        }

        @keyframes sk-bouncedelay {
            0%,
            80%,
            100% {
                -webkit-transform: scale(0);
                transform: scale(0);
            }
            40% {
                -webkit-transform: scale(1.0);
                transform: scale(1.0);
            }
        }
    </style>

    <main role="main">
        <section id="chatbot">
            <div class="container mt-10">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <img class="dominiqueimg" src="{{ asset('assets/images/chatbot/biglogo_dom-01.svg') }}" alt="">
                        <p id="baseline">Notre chatbot Dominique va vous aider à déterminer vos besoins et vous guider
                            dans votre <br>
                            parcours de formation et de carrière. Réponsez à ses questions et laissez-vous guider !</p>
                    </div>
                    <div class="col-md-9" id="box">
                        <div class="row" id="chat">

                        </div>
                        <br><br>
                        <div class="row" id="answers">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script>
        var chatBotMessage = $("#chat");
        var answers = $("#answers");

        var scrollBottom = function () {
            $('#box').animate({
                scrollTop: $('#box').offset().top
            }, 'slow');
        }
        var addAnswerAndQuestion = function (response) {
            if (response.data.length > 0) {
                chatBotMessage.append(
                    '<div class="loader" id="loader">' +
                    '<span class="spinme-right">' +
                    '<div class="spinner">' +
                    '<div class="bounce1"></div>' +
                    '<div class="bounce2"></div>' +
                    '<div class="bounce3"></div>' +
                    '</div>' +
                    '</span>' +
                    '</div>'
                )
                answers.html('')

                response.data.forEach(item => {
                    setTimeout(function () {
                        $("#loader").remove()
                        chatBotMessage.append(
                            '<div class="col-sm-12 answer">' +
                            '<div class="chat-text">' +
                            '<img class="dominiqueimgmin" src="{{ asset('assets/images/chatbot/ptitlogo_dom-01.svg') }}" alt="">' +
                            '<p class="mb-0">' + item.text + '</p>' +
                            '</div>' +
                            '</div>'
                        );
                        let html = ''
                        if (item.answers !== undefined) {
                            item.answers.forEach(answer => {
                                html += '<div class="col-md-6 text-center mt-2">' +
                                    '<button class="button-response" data-id="' + answer.id + '">' + answer.text + '</button>' +
                                    '</div>'
                            })
                            answers.html(html)
                            $(".button-response").on("click", answerQuestion);
                            scrollBottom()
                        } else {
                            answers.html('<div class="col-md-12 text-center">' +
                                '<button class="button-finish" onclick="startChat()">Vous êtes arrivés au bout du questionnaire ! Cliquer ici pour relancer</button>' +
                                '</div>')
                            scrollBottom()
                        }
                    }, 3000);
                })
            } else {
                answers.html('<div class="col-md-12 text-center">' +
                    '<button class="button-finish" onclick="startChat()">Vous êtes arrivés au bout du questionnaire ! Cliquer ici pour relancer</button>' +
                    '</div>')
                scrollBottom()
            }

        }

        var addResponse = function (text) {
            chatBotMessage.append(
                '<div class="col-sm-12 response">' +
                '<div class="chat-text">' +
                '<p class="mb-0">' + text + '</p>' +
                '</div>' +
                '</div>'
            );
        }

        var answerQuestion = function () {
            var id = $(this).data('id');
            var text = $(this).text();
            $.ajax({
                url: 'chatbot/' + id,
                type: 'GET',
                success: function (response) {
                    if (response.type === "success") {
                        addResponse(text)
                        addAnswerAndQuestion(response)
                    }
                }
            });
        };

        var startChat = function () {
            chatBotMessage.html('')
            answers.html('')
            $.ajax({
                url: '{{ path('chatbot_get_first_answer') }}',
                type: 'GET',
                success: function (response) {
                    if (response.type === "success") {
                        addAnswerAndQuestion(response)
                    }
                }
            });
        }
        $(function () {
            startChat()
        });
    </script>
{% endblock %}
