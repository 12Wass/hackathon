<a href="{{ path('show_article', {'slug': article.slug}) }}">
    <div class="col-lg-4 col-md-6 col-12 mb-4 pb-2">

        <div class="card border-0 shadow rounded overflow-hidden">
            <img src="{{ vich_uploader_asset(article, 'couvertureFile') }}" class="card-img-top" alt="">
            <div class="card-body p-4 content">
                <h5><a href="{{ path('show_article', {'slug': article.slug}) }}"
                       class="title"
                       style="color: #000091;font-family: MarianneBold, sans-serif;font-size: 20px">{{ article.title }}</a>
                </h5>
                <p class="text-muted mb-3">{{ article.content|striptags|replace({'&nbsp;': " "})|slice(0, 100) }}</p>
                <p class="mb-3" style="text-transform: uppercase;color: #E1000F;">{{ article.category.name }}</p>
            </div>
        </div>
    </div>
</a>

