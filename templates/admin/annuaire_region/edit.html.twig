{% extends 'views/admin/layout.html.twig' %}

{% block body %}
    <div class="content">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">Editer le formateur {{ trainer.firstname }} {{ trainer.lastname }}
                </h3>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        {{ form_start(form,{'attr': {'id': 'user'}}) }}
                        <div class="form-row">
                            <div class="col-sm-6 mb-3">
                                <label>Prénom</label>
                                {{ form_widget(form.first_name) }}
                                {{ form_errors(form.first_name) }}
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label>Nom</label>
                                {{ form_widget(form.last_name) }}
                                {{ form_errors(form.last_name) }}
                            </div>

                            <div class="col-sm-12 mb-3">
                                <label>N° de téléphone</label>
                                {{ form_widget(form.phone) }}
                                {{ form_errors(form.phone) }}
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label>Email</label>
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label>Region</label>
                                {{ form_widget(form.region) }}
                                {{ form_errors(form.region) }}
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label>Fonction</label>
                                {{ form_widget(form.function) }}
                                {{ form_errors(form.function) }}
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label>Créée le</label>
                                <input type="text" disabled class="form-control"
                                       value="{{ trainer.createdAt|date('d/m/Y h:i') }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-alt-primary">Mettre à jour</button>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
