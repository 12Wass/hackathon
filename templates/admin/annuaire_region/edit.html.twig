{% extends 'views/admin/layout.html.twig' %}

{% block body %}
    <div class="content">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">Editer la région {{ region.name }}
                </h3>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        {{ form_start(form,{'attr': {'id': 'region'}}) }}
                        <div class="form-row">
                            <div class="col-sm-12 mb-3">
                                <label>Région</label>
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                            </div>
                        <div class="col-sm-12 mb-3">
                            <label>Créée le</label>
                            <input type="text" disabled class="form-control"
                                   value="{{ region.createdAt|date('d/m/Y h:i') }}">
                        </div>
                    </div>

                    <div class="form-group">
                            <button type="submit" class="btn btn-alt-primary">Mettre à jour</button>
                    </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
